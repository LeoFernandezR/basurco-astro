---
import "../styles/global.css";
import { Image } from "astro:assets";
import logo from "../assets/logo.jpeg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative">
    <header
      class="px-4 py-2 shadow-md bg-white flex items-center justify-between sticky top-0 z-10"
    >
      <a href="/">
        <Image src={logo} class="w-[250px] h-full object-contain" alt="" />
      </a>
      <ul class="flex items-center space-x-4 text-lg">
        <li>
          <a href="/nosotros" class="text-blue-500 hover:underline">
            Nosotros
          </a>
        </li>
        <li>
          <a href="/recursos-humanos" class="text-blue-500 hover:underline">
            Recursos humanos
          </a>
        </li>
        <li>
          <a
            href="/contacto"
            class="hover:underline bg-blue-500 text-white px-4 py-2 rounded-md"
          >
            Contacto
          </a>
        </li>
      </ul>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-blue-500 text-white py-4 px-12">
      <div class="container mx-auto flex justify-between items-center">
        <ul class="flex space-x-4">
          <li>
            <a href="/nosotros" class="hover:underline"> Nosotros </a>
          </li>
          <li>
            <a href="/recursos-humanos" class="hover:underline">
              Recursos humanos
            </a>
          </li>
          <li>
            <a href="/contacto" class="hover:underline"> Contacto </a>
          </li>
        </ul>
        <p>&copy; {new Date().getFullYear()} Todos los derechos reservados</p>
      </div>
    </footer>
  </body>
</html>
